{
  "extends": "airbnb-base",
  "rules": {
    "global-require": ["off"],
    "no-underscore-dangle": ["off"],
    "no-param-reassign": ["off"],
    "arrow-parens": ["error", "always"],
    "max-len": ["error", 120],
    "no-plusplus": ["off"]
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
